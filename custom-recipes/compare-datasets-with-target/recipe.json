{
    "meta": {
        "label": "Compute drift between two datasets with predictions",
        "description": "Measure a potenteial drift between the original training dataset and a new scoring dataset. A  column with prediciton labels is thus needed",
        "icon": "icon-puzzle-piece",
        "displayOrderRank": 2
    },

    "selectableFromDataset": "original",

    "kind": "PYTHON",
    
    "inputRoles" : [
        {
            "name": "original",
            "label": "Original training dataset",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        },
        {
            "name": "new",
            "label": "New dataset",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],

    "outputRoles" : [
        {
            "name": "main_output",
            "label": "Metrics dataset",
            "description": "Dataset storing drift metrics",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],

    "params": [
        {
            "name": "learning_task",
            "label": "Type of learning task",
            "type": "SELECT",
            "selectChoices": [
                {
                    "value": "CLASSIFICATION",
                    "label": "Classification"
                },
                {
                    "value": "REGRESSION",
                    "label": "Regression"
                }
            ],
            "mandatory": true
        },
        {
            "name": "target_variable",
            "label" : "Prediction column",
            "type": "COLUMN",
            "mandatory" : true,
            "columnRole": "original"
        },
        {
            "name": "metric_list",
            "label": "Metrics",
            "type": "MULTISELECT",
            "selectChoices": [
                { "value": "drift_score", "label": "Drift score"},
                { "value": "fugacity", "label": "Fugacity"},
                { "value": "feature_importance", "label":  "Feature importance"}
            ],
            "defaultValue": ["drift_score"]
        }

    ],

    "resourceKeys": []

}

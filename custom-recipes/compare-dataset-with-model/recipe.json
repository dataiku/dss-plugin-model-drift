{
    "meta": {
        "label": "Compute data drift of a deployed model",
        "description": "Measure a potential data drift between the original training data of a model and a new dataset. Support regression and classification",
        "icon": "icon-puzzle-piece",
        "displayOrderRank": 1
    },

    "selectableFromDataset": "input",

    "kind": "PYTHON",

    "paramsPythonSetup": "compute_model_id_choice.py",
    
    "inputRoles" : [
        {
            "name": "model",
            "label": "Deployed model",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": false,
            "acceptsSavedModel": true
        },
        {
            "name": "input",
            "label": "New dataset",
            "description": "New dataset",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],

    "outputRoles" : [
        {
            "name": "main_output",
            "label": "Metrics dataset",
            "description": "Dataset storing drift metrics",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],

    "params": [
        {
            "name": "use_active_version",
            "label": "Use the model's active version",
            "type": "BOOLEAN",
            "defaultValue": true
        },
        {
            "name": "version_id",
            "label": "Model version",
            "type": "SELECT",
            "getChoicesFromPython": true,
            "visibilityCondition": "!model.use_active_version"

        },
        {
            "name": "metric_list",
            "label": "Metrics",
            "type": "MULTISELECT",
            "selectChoices": [
                { "value": "drift_score", "label": "Drift score"},
                { "value": "fugacity", "label": "Fugacity", "Description":  "Prediction density"},
                { "value": "feature_importance", "label": "Feature importance"}
            ],
            "defaultValue": ["drift_score"]
        },
        {
            "name": "output_format",
            "label": "Output format",
            "type": "SELECT",
            "selectChoices": [
                {
                    "value": "single_column",
                    "label": "Single JSON column per metric"
                },
                {
                    "value": "multiple_columns",
                    "label": "Multiple columns per metric"
                }
            ],
            "defaultValue": "single_column"
        }
    ],

    "resourceKeys": []

}
